<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeputyApp.Pages.SchedulePage"
             Title="Расписание">

    <CollectionView x:Name="ScheduleList" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="#3498DB" CornerRadius="10" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="{Binding Location}" FontSize="14" TextColor="Gray"/>
                        <Label Text="{Binding StartTime, StringFormat='Начало: {0:dd.MM.yyyy HH:mm}'}" />
                        <Label Text="{Binding EndTime, StringFormat='Окончание: {0:HH:mm}'}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
