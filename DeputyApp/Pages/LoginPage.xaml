<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="DeputyApp.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">
        <Label Text="Welcome!" FontSize="28" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>