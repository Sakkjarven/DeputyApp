<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeputyApp.Pages.DashboardPage"
             Title="Личный кабинет">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Frame BackgroundColor="#2C3E50" CornerRadius="16" Padding="16">
                <VerticalStackLayout>
                    <Label x:Name="DeputyNameLabel"
                           TextColor="White"
                           FontSize="24"
                           FontAttributes="Bold"/>
                    <Label x:Name="DeputyPositionLabel"
                           TextColor="LightGray"/>
                    <Label x:Name="DeputyEmailLabel"
                           TextColor="LightGray"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Разделы" FontSize="20" FontAttributes="Bold"/>

            <Button Text="📅 Расписание заседаний"
                    Clicked="OnScheduleClicked"
                    BackgroundColor="#3498DB"
                    TextColor="White"/>

            <Button Text="📂 Документы"
                    Clicked="OnDocumentsClicked"
                    BackgroundColor="#27AE60"
                    TextColor="White"/>

            <Button Text="🚪 Выйти"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="#BDC3C7"
                    TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
